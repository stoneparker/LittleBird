{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@user/*": ["./src/user/*"],
      "@auth/*": ["./src/auth/*"],
      "@theme/*": ["./src/theme/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
